{
    "private": true,
    "type": "module",
    "scripts": {
        "start": "npm run app",
        "electron": "npx electron electron/main.js",
        "build": "vite build",
        "dev": "vite --host",
        "capacitor:sync": "npx cap sync",
        "capacitor:build": "vite build && npx cap sync",
        "android-l": "npx cap run android -l --port=8000",
        "capacitor:run:android": "npx cap run android",
        "capacitor:open:android": "npx cap open android",
        "capacitor:live:android": "concurrently \"npm run dev\" \"npx cap run android -l \"",
        "mobile:dev": "cross-env concurrently \"vite --host\" \"npx cap sync android && npx cap run android -l\"",
        "pwa": "vite build && php artisan serve --host=0.0.0.0 --port=8000",
        "app": "cross-env concurrently \"php artisan serve --host=0.0.0.0\" \"npm run dev\"",
        "mobile:full-stack": "cross-env concurrently \"php artisan serve --host=0.0.0.0\" \"vite --host\" \"npx cap sync android && npx cap run android -l\""
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.4",
        "autoprefixer": "^10.4.21",
        "axios": "^1.8.2",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "dotenv": "^16.5.0",
        "electron": "^36.3.2",
        "electron-builder": "^26.0.12",
        "electron-serve": "^2.1.1",
        "electron-window-state": "^5.0.3",
        "laravel-echo": "^2.1.4",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.5.3",
        "pusher-js": "^8.4.0",
        "tailwindcss": "^4.1.4",
        "vite": "^6.2.4",
        "vite-plugin-pwa": "^1.0.0",
        "wait-on": "^8.0.3"
    },
    "dependencies": {
        "@capacitor-community/fcm": "^7.1.1",
        "@capacitor-firebase/messaging": "^7.2.0",
        "@capacitor/android": "^7.2.0",
        "@capacitor/cli": "^7.2.0",
        "@capacitor/core": "^7.2.0",
        "@capacitor/local-notifications": "^7.0.1",
        "@capacitor/push-notifications": "^7.0.1",
        "@floating-ui/react": "^0.27.8",
        "@headlessui/react": "^2.2.2",
        "@inertiajs/react": "^2.0.8",
        "@laravel/echo-react": "^2.1.5",
        "@tailwindcss/postcss": "^4.1.4",
        "@tanstack/react-table": "^8.21.3",
        "@vitejs/plugin-react": "^4.4.1",
        "@xyflow/react": "^12.6.0",
        "framer-motion": "^12.8.0",
        "lucide-react": "^0.503.0",
        "react": "^19.1.0",
        "react-dnd": "^16.0.1",
        "react-dnd-html5-backend": "^16.0.1",
        "react-dom": "^19.1.0",
        "react-hot-toast": "^2.5.2",
        "react-router-dom": "^7.5.2",
        "uuid": "^11.1.0",
        "web-push": "^3.6.7"
    },
    "build": {
        "appId": "com.workflow.z360",
        "productName": "Workflow Z360",
        "directories": {
            "output": "dist_electron"
        },
        "files": [
            "public/build/**/*",
            "electron/**/*"
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "public/icons/icon.icns"
        },
        "win": {
            "icon": "public/icons/icon.ico"
        },
        "linux": {
            "icon": "public/icons/icon.png",
            "target": [
                "AppImage",
                "deb"
            ]
        }
    }
}
