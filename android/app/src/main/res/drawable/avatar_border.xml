<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <solid android:color="#30000000" />
            <size
                android:width="110dp"
                android:height="110dp" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#3384C7FB" />
            <stroke
                android:width="3dp"
                android:color="#80FFFFFF" />
        </shape>
    </item>
</layer-list>