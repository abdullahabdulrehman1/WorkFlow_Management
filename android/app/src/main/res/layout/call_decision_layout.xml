<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Gradient background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/call_screen_gradient"
        android:orientation="vertical" />

    <!-- Caller info and avatar container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="32dp">

        <!-- Animated avatar container -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="32dp">

            <!-- Pulsing ring 1 -->
            <View
                android:id="@+id/pulse_ring_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/call_pulse_ring"
                android:layout_gravity="center" />

            <!-- Pulsing ring 2 -->
            <View
                android:id="@+id/pulse_ring_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/call_pulse_ring"
                android:layout_gravity="center" />

            <!-- Avatar circle -->
            <ImageView
                android:id="@+id/caller_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/call_avatar_bg"
                android:src="@android:drawable/ic_menu_myplaces"
                android:padding="20dp"
                app:tint="#FFFFFF"
                android:layout_gravity="center"
                android:contentDescription="Caller avatar" />
        </FrameLayout>

        <!-- Call information -->
        <TextView
            android:id="@+id/caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incoming Call"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/call_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice Call"
            android:textColor="#E0E0E0"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Call action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="72dp"
        android:paddingTop="32dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <!-- Decline call button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp">
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/call_button_decline_bg" />
                    
                <ImageButton
                    android:id="@+id/decline_call_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="@android:color/transparent"
                    app:tint="#FFFFFF"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Decline call" />
            </FrameLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Accept call button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp">
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/call_button_accept_bg" />
                    
                <ImageButton
                    android:id="@+id/accept_call_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_call"
                    android:background="@android:color/transparent"
                    app:tint="#FFFFFF"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Accept call" />
            </FrameLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>