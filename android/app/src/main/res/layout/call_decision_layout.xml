<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Enhanced gradient background with radial effect -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/call_screen_gradient"
        android:orientation="vertical" />

    <!-- App logo at the top -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/app_logo"
        android:scaleType="fitCenter"
        android:contentDescription="App Logo"
        android:alpha="0.9"/>

    <!-- Caller info and avatar container with enhanced styling -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="32dp">

        <!-- Improved animated avatar container with custom pulse effect -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="32dp">

            <!-- Enhanced pulsing ring 1 -->
            <View
                android:id="@+id/pulse_ring_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/call_pulse_ring"
                android:layout_gravity="center" />

            <!-- Enhanced pulsing ring 2 -->
            <View
                android:id="@+id/pulse_ring_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/call_pulse_ring"
                android:layout_gravity="center" />

            <!-- Enhanced pulsing ring 3 for extra visual effect -->
            <View
                android:id="@+id/pulse_ring_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/call_pulse_ring"
                android:layout_gravity="center" />

            <!-- Enhanced avatar circle with border -->
            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@drawable/avatar_border">
                
                <ImageView
                    android:id="@+id/caller_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/call_avatar_bg"
                    android:contentDescription="Caller avatar"
                    android:padding="4dp"
                    android:src="@drawable/profile_image"
                    android:scaleType="centerCrop"/>
            </FrameLayout>
        </FrameLayout>

        <!-- Enhanced call information with improved typography -->
        <TextView
            android:id="@+id/caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incoming Call"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:elevation="3dp" />

        <TextView
            android:id="@+id/call_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice Call"
            android:textColor="#E0E0E0"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />
    </LinearLayout>

    <!-- Enhanced call action buttons with improved styling -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="60dp"
        android:paddingTop="20dp"
        android:baselineAligned="false">
        
        <!-- Decline call button with container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/call_button_decline_bg">
                
                <ImageButton
                    android:id="@+id/decline_call_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:padding="20dp"
                    android:contentDescription="Decline call" />
            </FrameLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:alpha="0.9"/>
        </LinearLayout>
        
        <!-- Spacer -->
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        
        <!-- Accept call button with container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/call_button_accept_bg">
                
                <ImageButton
                    android:id="@+id/accept_call_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_call"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:padding="20dp"
                    android:contentDescription="Accept call" />
            </FrameLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:alpha="0.9"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
